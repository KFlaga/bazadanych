<UserControl x:Class="BazaDanych.TableViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BazaDanych"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <DockPanel>
        <DockPanel x:Name="toolbar" Background="LightGray" DockPanel.Dock="Top" Height="30" LastChildFill="False">
            <Button x:Name="butNewRecord" Content="NEW" BorderBrush="Black" Margin="2" Click="butNewRecord_Click" IsEnabled="False"/>
            <Button x:Name="butEditRecord" Content="EDIT" BorderBrush="Black" Margin="2" IsEnabled="False"/>
            <Button x:Name="butDeleteRecord" Content="DELETE" BorderBrush="Black" Margin="2" IsEnabled="False"/>
            <Button Content="FILTER" BorderBrush="Black" Margin="2"/>
        </DockPanel>
        <ListView x:Name="mainView" DockPanel.Dock="Bottom">
            
            <ListView.View>
                <GridView x:Name="tableView" AllowsColumnReorder="True">
                    <GridViewColumn Header="test1" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

    </DockPanel>
</UserControl>
